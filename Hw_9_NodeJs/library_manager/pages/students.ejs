<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
<div class="container">
    <h1 class="text-center">Students</h1>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Group ID</th>
            <th>Term</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% students.forEach(student => { %>
            <tr>
                <td><%= student.Id %></td>
                <td><%= student.FirstName %></td>
                <td><%= student.LastName %></td>
                <td><%= student.Id_Group %></td>
                <td><%= student.Term %></td>
                <td class="text-center">
                    <a href="/students/edit/<%= student.Id %>" class="btn btn-warning btn-sm mt-0">Edit</a>
                    <a href="/students/delete/<%= student.Id %>" class="btn btn-danger btn-sm mt-0">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <a href="/students/add" class="btn btn-primary">Add Student</a>
    <a href="/" class="btn btn-default">Back to Home</a>
</div>
</body>
</html>
