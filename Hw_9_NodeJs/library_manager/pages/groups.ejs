<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groups</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
<div class="container">
    <h1 class="text-center">Groups</h1>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Faculty ID</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        <% groups.forEach(group => { %>
            <tr>
                <td><%= group.Id %></td>
                <td><%= group.Name %></td>
                <td><%= group.Id_Faculty %></td>
                <td class="text-center">
                    <a href="/groups/edit/<%= group.Id %>" class="btn btn-warning btn-sm mt-0">Edit</a>
                    <a href="/groups/delete/<%= group.Id %>" class="btn btn-danger btn-sm mt-0">Delete</a>
                </td>
            </tr>
        <% }) %>
        </tbody>
    </table>
    <a href="/groups/add" class="btn btn-primary">Add Group</a>
    <a href="/" class="btn btn-default">Back to Home</a>
</div>
</body>
</html>
